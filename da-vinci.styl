/* Basic shapes
------------------------------------------------*/

// rectangle
rect($w, $h, $c = #eb02dd)
  background-color $c
  display inline-block
  height $h
  width $w

// circle
circ($r, $c = #eb02dd)
  background-color $c
  border-radius 50%
  display inline-block
  height $r * 2
  width $r * 2

// oval
oval($w, $h, $c = #eb02dd)
  background-color $c
  border-radius 50%
  display inline-block
  height $h
  width $w

// triangle
tri($t, $l, $r, $c = #eb02dd)
  border-bottom $t solid $c
  border-left $l solid transparent
  border-right $r solid transparent
  display inline-block
  height 0
  width 0

/* More features
------------------------------------------------*/

// position
pos($x, $y, $z = 1)
  left $y
  position absolute
  top $x
  z-index $z

// flip
flip($x = horizontal)
  if $x == "horizontal"
    transform rotateY(180deg)
  if $x == "vertical"
    transform rotateX(180deg)

// clone
clone($x, $y, $c = #eb02dd)
  box-shadow $x $y $c
