	background-size: 200px 200px;

.element-7
	rect(200px,200px,highlight)
	flip(vertical)
	background-image: url("../img/magic.gif");
	background-size: 200px 200px;

.element-8
	rect(100px,100px,highlight)
	clone(110px,0, #ccc)

